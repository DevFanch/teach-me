{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	-
	{{ course.name }}
{% endblock %}

{% block body %}
	<div
		class="relative bg-gradient-to-r from-blue-600 to-indigo-800">
		<!-- Overlay de motif en arrière-plan -->
		<div class="absolute inset-0 bg-grid-white/[0.05] bg-[size:20px_20px]"></div>

		<!-- Entête de la page -->
		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
			<div class="flex flex-col md:flex-row items-center md:items-start gap-8">
				{# {% if course.image %}
					<div class="w-full md:w-1/3 lg:w-1/4">
						<img src="{{ asset(course.image) }}" alt="{{ course.name }}" class="w-full rounded-lg shadow-lg">
					</div>
				{% endif %} #}

				<div class="w-full md:w-2/3 lg:w-3/4 text-center md:text-left">
					<div class="flex items-center justify-center md:justify-start mb-4">
						<a href="{{ path('app_course_index') }}" class="text-blue-200 hover:text-white flex items-center">
							<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
							</svg>
							Retour aux cours
						</a>
					</div>

					<h1 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
						{{ course.name }}
					</h1>

					<div class="mt-4 flex flex-wrap gap-3">
						<span class="px-3 py-1 bg-blue-500 bg-opacity-30 text-blue-100 text-sm rounded-full">
							{{ course.category.name }}
						</span>
						<span class="px-3 py-1 bg-blue-500 bg-opacity-30 text-blue-100 text-sm rounded-full">
							{{ course.duration }}
							heures
						</span>
					</div>

					<p class="mt-4 text-lg text-blue-100">
						{{ course.content|slice(0, 120) }}
						{% if course.content|length > 120 %}...{% endif %}
					</p>

					<div class="mt-8">
						<a href="#" class="inline-block px-8 py-3 bg-white text-blue-700 rounded-md font-medium shadow-md hover:bg-blue-50 transition-colors">
							S'inscrire au cours
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Contenu détaillé du cours -->
	<div class="bg-white py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div
				class="lg:grid lg:grid-cols-3 lg:gap-8">
				<!-- Colonne principale -->
				<div class="lg:col-span-2">
					<div class="prose prose-blue max-w-none">
						<h2 class="text-2xl font-bold text-gray-900 mb-4">À propos de ce cours</h2>
						<div class="mt-4 text-gray-700">
							{{ course.content|raw|slice(0, 120) }}
							{% if course.content|length > 120 %}...{% endif %}
						</div>

						<h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Ce que vous apprendrez</h2>
						<div class="mt-4 text-gray-700">
							Plein de choses
						</div>
					</div>
				</div>

				<!-- Sidebar -->
				<div class="mt-12 lg:mt-0">
					<div class="sticky top-8">
						<div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
							<h3 class="text-lg font-medium text-gray-900 mb-4">Informations</h3>

							<div class="space-y-3">
								<div class="flex justify-between">
                                    <span class="text-gray-600">Date de création:</span>
									<span class="font-medium">{{ course.createdAt is defined ? course.createdAt|date('d/m/Y à H:i') : 'Non renseigné' }}</span>
								</div>
								<div class="flex justify-between">
                                    <span class="text-gray-600">Catégorie :</span>
									<span class="font-medium">{{ course.category.name }}</span>
								</div>
								<div class="flex justify-between">
                                    <span class="text-gray-600">Durée:</span>
									<span class="font-medium">{{ course.duration }}
										heures</span>
								</div>
								<div class="flex justify-between">
									<span class="text-gray-600">Prix:</span>
									<span class="font-medium">{{ course.price is defined ? course.price ~ ' €' : 'Gratuit' }}</span>
								</div>
								<div class="flex justify-between">
									<span class="text-gray-600">Instructeur: {{ course.trainer is defined ? course.trainer | length : 'Pas de formateur' }}</span>
                                    <span class="font-medium">
                                        {% for trainer in course.trainer %}
											{% if is_granted('ROLE_PLANNER') %}
												<a href="{{ path('app_trainer_show', {'id': trainer.id}) }}">
													{{ trainer.firstName }} {{ trainer.lastName }}
												</a>
                                            {% else %}
												{{ trainer.firstName }} {{ trainer.lastName }}
                                            {% endif %}
                                            {% if not loop.last %}, {% endif %}
                                        {% endfor %}
									</span>
								</div>
								<div class="flex justify-between">
									<span class="text-gray-600">Langue:</span>
									<span class="font-medium">Français</span>
								</div>
								<div class="flex justify-between">
									<span class="text-gray-600">Dernière mise à jour:</span>
									<span class="font-medium">{{ course.modifiedAt is defined ? course.modifiedAt|date('d/m/Y à H:i') : 'Non renseigné'  }}</span>
								</div>
							</div>

							<div class="mt-6">
								<a href="#" class="block w-full px-4 py-3 bg-blue-600 text-white text-center rounded-md font-medium hover:bg-blue-700 transition-colors">
									S'inscrire maintenant
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

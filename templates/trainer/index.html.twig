{% extends 'base.html.twig' %}

{% block title %}Trainer index{% endblock %}

{% block body %}
    <h1>Trainer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>CreatedAt</th>
                <th>ModifiedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trainer in trainers %}
            <tr>
                <td>{{ trainer.id }}</td>
                <td>{{ trainer.firstname }}</td>
                <td>{{ trainer.lastname }}</td>
                <td>{{ trainer.createdAt ? trainer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trainer.modifiedAt ? trainer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_trainer_show', {'id': trainer.id}) }}">show</a>
                    <a href="{{ path('app_trainer_edit', {'id': trainer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trainer_new') }}">Create new</a>
{% endblock %}

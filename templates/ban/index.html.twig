{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Régions {% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Régions FR</h1>
    <h1>Liste des régions</h1>
    <table class="table-bordered">
    <thead>
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Nom</th>
        </tr>
    </thead>
    <tbody>
        {% for region in regions %}
        <tr>
            <td>{{ region.code }}</td>
            <td>{{ region.nom }}</td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
